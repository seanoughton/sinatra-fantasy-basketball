<div class="container">

  <div class="row">
      <div class="col-md">
        <h1>Create a Team</h1>
      </div> <!-- end col --> 
  </div><!-- end row -->

  <div class="row">
      <div class="col-md">
        <form action="/team/new" method="POST">
          <div class="form-group">
            <label for="exampleFormControlInput1">Team Name</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Charlie's Warriors" name="team[teamname]">
          </div>

        <button type="submit" class="btn btn-primary">Create Team</button>         

          <br></br>
          <div class="col-md">
              <h3>Choose Players</h3>
              <%@players.each do |player|%>
                <input type="checkbox" name="team[player_ids][]" id="<%=player.playername %>" value="<%=player.id%>"><a href="/player/<%=player.slug%>" target="blank">  <%=player.playername%>: <%=player.position%></a></input>
                <br></br>
              <%end%>
             
        </form>
      </div> <!-- end col --> 
  </div><!-- end row -->


