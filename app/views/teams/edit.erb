<div class="container">
	<div class="row">
		<div class="col-md">
			<%@user.teams.each do |team|%>
				<%=team.teamname%>
				<form action="/team/<%=@team.id%>/edit" method="POST">
				  <input type="hidden" name="_method" value="PATCH">

				  <h3>Team Name</h3>
				  <input type="text" name="team[teamname]" id="team_name" value="<%= team.teamname%>">
				  <br></br>

				  <h3>Remove Players</h3>

				  <% team.players.all.each do |player| %>
				    <label><a href="/player/<%=player.slug%>" target="blank"><%=player.playername%>: <%=player.position%></a></label>
				    <input type="checkbox" id="remove_<%=player.id%>" name="remove_player[player_ids][]" value="<%= player.id %>"><br>
				  <% end %>

				  <br></br>

				  <h3>Add Players</h3>

				  <% @players.each do |player| %>
				    <label><a href="/player/<%=player.slug%>" target="blank"><%=player.playername%>: <%=player.position%></a></label>
				    <input type="checkbox" id="add_<%=player.id%>" name="add_player[player_ids][]" value="<%= player.id %>"><br>
				  <% end %>

				  <br></br>

				  <button type="submit" class="btn btn-primary">Edit Team</button>
				</form>

			<%end%>
		</div>
	</div><!-- end row -->
</div> <!-- end container -->	






